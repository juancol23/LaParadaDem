<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#fffefe"
    tools:context=".DashboardActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:foregroundGravity="center"
        android:orientation="horizontal"
        android:background="#eee">



        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/menu_profile_image"
            android:layout_margin="15dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:onClick="xxx"
            android:background="@drawable/logo"
            app:civ_border_color ="#eee"
            app:civ_border_width="3dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#3d3d3d"
            android:text="Â¿Donde entreno?"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:weightSum="1"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_weight=".5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            >


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@drawable/miraflores"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha=".4"
                android:background="#000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:gravity="center"
                android:text="Miraflores"
                android:layout_marginTop="90dp"
                android:textColor="#eee"
                android:textSize="22sp" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_weight=".5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            >


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@drawable/san_isidro"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha=".4"
                android:background="#000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:gravity="center"
                android:text="San Isidro"
                android:layout_marginTop="90dp"
                android:textColor="#eee"
                android:textSize="22sp" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:weightSum="1"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_weight=".5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            >


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@drawable/surquillo"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha=".4"
                android:background="#000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:gravity="center"
                android:text="Surquillo"
                android:layout_marginTop="90dp"
                android:textColor="#eee"
                android:textSize="22sp" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_weight=".5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            >


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@drawable/la_molina"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha=".4"
                android:background="#000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:gravity="center"
                android:text="La Molina"
                android:layout_marginTop="90dp"
                android:textColor="#eee"
                android:textSize="22sp" />

        </RelativeLayout>

    </LinearLayout>




</LinearLayout>